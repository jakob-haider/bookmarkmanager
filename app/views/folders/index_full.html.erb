<p id="notice"><%= notice %></p>

<h1>Folders</h1>

<table>
  <thead>
    <tr>
      <th>Exportid</th>
      <th>Parent</th>
      <th>Title</th>
      <th>Index</th>
      <th>Dateadded</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @folders.each do |folder| %>
      <tr>
        <td><%= folder.exportid %></td>
<!--        <td><%#= folder.parent %></td>-->
        <td><%= folder.parent_id %></td>
        <td><%= folder.title %></td>
        <td><%= folder.position %></td>
        <td><%= folder.dateadded %></td>
        <td><%= link_to 'Show', folder %></td>
        <td><%= link_to 'Edit', edit_folder_path(folder) %></td>
        <td><%= link_to 'Destroy', folder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

